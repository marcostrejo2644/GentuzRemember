<div class="col-md-4 mx-auto center">
  <div class="card">
    <div class="card-header">
      <h3>Add Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{noteEdit._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <label for="typeNote">Type</label>
          <select class="form-control" id="typeNote" name="typeNote">
            {{#select noteEdit.typeNote}}
            <option value="Cook - Ingredient">Cook - Ingredients</option>
            <option value="Proyects">Proyects</option>
            <option value="Programming">Programming</optio>
            <option value="Music">Music</option>
            <option value="Other">Other</option>
            {{/select}}
          </select>
        </div>
        <div class="form-group">
          <label for="priority">Priority</label>
          <select class="form-control" id="priority" name="priority">
            {{#select noteEdit.priority}}
            <option value="1">Max</option>
            <option value="2">Medium</option>
            <option value="3">Low</option>
            {{/select}}
          </select>
        </div>
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" autofocus value="{{noteEdit.title}}">
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control"
            placeholder="Description">{{noteEdit.description}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>